{% extends 'base.html.twig' %}

{% block title %}CD index{% endblock %}

{% block body %}
    <h1>CD index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Cote</th>
                <th>Format</th>
                <th>CodeOeuvre</th>
                <th>Plages</th>
                <th>Duration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c_d in c_ds %}
            <tr>
                <td>{{ c_d.id }}</td>
                <td>{{ c_d.title }}</td>
                <td>{{ c_d.cote }}</td>
                <td>{{ c_d.format }}</td>
                <td>{{ c_d.codeOeuvre }}</td>
                <td>{{ c_d.plages }}</td>
                <td>{{ c_d.duration ? c_d.duration|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('c_d_show', {'id': c_d.id}) }}">show</a>
                    <a href="{{ path('c_d_edit', {'id': c_d.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('c_d_new') }}">Create new</a>
{% endblock %}
